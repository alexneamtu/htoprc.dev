{
  "name": "@htoprc/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:staging": "wrangler d1 migrations apply DB --env staging --remote",
    "db:migrate:prod": "wrangler d1 migrations apply DB --env production --remote",
    "db:seed": "wrangler d1 execute DB --local --file=./migrations/seed.sql"
  },
  "dependencies": {
    "@htoprc/parser": "workspace:*",
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.10.0",
    "hono": "^4.11.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@vitest/coverage-v8": "^4.0.17",
    "vitest": "^4.0.17",
    "wrangler": "^4.59.1"
  }
}
